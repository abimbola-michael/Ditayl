<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rolling.ditayl">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DetailsSaver">
        <activity
            android:name="com.rolling.ditayl.MainActivity"
            android:label="@string/app_name"
            android:exported="false"
            android:theme="@style/Theme.DetailsSaver.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rolling.ditayl.CreateEditDetailsActivity"
            android:label="@string/create_edit_activity_label"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>